<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pavlion.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CitiesList"
            android:label="Cities"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".options"
            android:label="Categories"
            android:parentActivityName=".CitiesList" />
        <activity
            android:name=".Hotels"
            android:label="Hotels"
            android:parentActivityName=".options" />
        <activity
            android:name=".Restaurants"
            android:label="Restaurants"
            android:parentActivityName=".options" />
        <activity
            android:name=".Shopping"
            android:label="Shopping"
            android:parentActivityName=".options" />
        <activity
            android:name=".Nightlife"
            android:label="NightLife"
            android:parentActivityName=".options" />
        <activity
            android:name=".Culture"
            android:label="Culture"
            android:parentActivityName=".options" />
        <activity
            android:name=".Popular"
            android:label="Popular"
            android:parentActivityName=".options" />
    </application>

</manifest>