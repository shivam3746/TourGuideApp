<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shoppingCenterImage"
        android:layout_width="@dimen/shoppingCenter_img_width"
        android:layout_height="@dimen/shoppingCenter_img_height"
        android:scaleType="centerCrop"
        android:contentDescription="@string/shopping_img_desc"/>
    <TextView
        android:id="@+id/shoppingCenterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_items_textView_marginTop"
        android:layout_marginLeft="@dimen/shoppingCenter_txt_margin_Left_Start"
        android:layout_marginStart="@dimen/shoppingCenter_txt_margin_Left_Start"
        android:textSize="@dimen/shoppingCenter_txt_size"/>

</LinearLayout>